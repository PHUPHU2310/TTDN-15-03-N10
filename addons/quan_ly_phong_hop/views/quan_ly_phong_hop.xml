<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_quan_ly_phong_hop_form" model="ir.ui.view">
            <field name="name">quan_ly_phong_hop</field>
            <field name="model">quan_ly_phong_hop</field>
            <field name="arch" type="xml">
                <form>
                     <sheet>
                <group>
                    <field name="ten_phong" />
                    <field name="suc_chua" />
                    <field name="trang_thiet_bi" />
                    <field name="dia_chi" />
        
                </group>
            
            </sheet>
                </form>
            </field>
        </record>


        <record id="view_quan_ly_phong_hop_tree" model="ir.ui.view">
            <field name="name">quan_ly_phong_hop</field>
            <field name="model">quan_ly_phong_hop</field>
            <field name="arch" type="xml">
                 <tree string="Danh Sách Phòng Họp">
            <field name="ten_phong" />
            <field name="suc_chua" />
            <field name="trang_thiet_bi" />
            
        </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="quan_ly_phong_hop_search">
            <field name="model">quan_ly_phong_hop</field>
            <field name="arch" type="xml">
                <search>
                   <field name="ten_phong" />
                               <field name="suc_chua" />
                               <field name="trang_thiet_bi" />
                               <field name="dia_chi" />
                </search>
            </field>
        </record>

        <record id="action_quan_ly_phong_hop" model="ir.actions.act_window">
            <field name="name">Quản lý phòng họp và hội trường</field>
            <field name="res_model">quan_ly_phong_hop</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref = "quan_ly_phong_hop_search"/>
        </record>
    </data>
</odoo>
        
    